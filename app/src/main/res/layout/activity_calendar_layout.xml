<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calenActivRelLay"
    android:background="@color/action_bar_color"
    tools:context="com.jabarasca.financial_app.CalendarActivity">

    <TextView
        android:id="@+id/datePickerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/datepicker_title"
        android:paddingTop="10dp"
        style="@style/actionBarTextViewStyle" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/datePickerTextView"
        android:paddingTop="10dp"
        style="@style/datePickerStyle"/>

    <Button
        android:id="@+id/datePickerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker"
        android:layout_centerHorizontal="true"
        android:text="@string/positive_button_message"
        style="@style/datePickerButtonStyle"/>

</RelativeLayout>
