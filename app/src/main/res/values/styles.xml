<resources>

    <!-- App custom theme and customActionBar theme. -->
    <style name="AppCustomTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
        <!-- For appCompat compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarTheme</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:displayOptions">showHome|homeAsUp|showCustom</item>
        <!-- For appCompat compatibility -->
        <item name="background">@color/action_bar_color</item>
        <item name="displayOptions">showHome|homeAsUp|showCustom</item>
    </style>

    <!-- Dialog theme for select date activity -->
    <style name="DialogTheme"
        parent="@style/Theme.AppCompat.Light.Dialog">
        <!-- Changes the datepicker text color -->
        <item name="android:textColorPrimary">#FFF</item>
    </style>

    <!-- activity_main_layout.xml -->
    <style name="backgroundImgView">
        <item name="android:src">@drawable/background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bottomBarImgView">
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="amountsListView">
        <item name="android:divider">@null</item>
    </style>

    <style name="drawerStyle">
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="amountBalance">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="bottomBarGraphicImgView">
        <item name="android:src">@drawable/graphic_neutral</item>
    </style>

    <!-- activity_calendar_layout.xml -->
    <style name="datePickerStyle">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:calendarTextColor">@color/datePickerColor</item>
    </style>

    <style name="datePickerButtonStyle">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- menu_item_layout.xml -->
    <style name="menuItemTextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- amount_list_view_item_layout.xml -->
    <style name="amountItemTextView">
        <item name="android:textSize">23sp</item>
    </style>

    <!-- add_amount_popup_layout -->
    <style name="addAmountPopupEditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">6</item>
    </style>

    <!-- action_bar_text_layout.xml-->
    <style name="actionBarTextViewStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
