<resources>

    <!-- App custom theme and customActionBar theme. -->
    <style name="AppCustomTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
        <!-- For appCompat compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarTheme</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:displayOptions">showHome|homeAsUp|showCustom</item>
        <!-- For appCompat compatibility -->
        <item name="background">@color/action_bar_color</item>
        <item name="displayOptions">showHome|homeAsUp|showCustom</item>
    </style>

    <!-- Dialog theme for select date activity -->
    <style name="DialogTheme"
        parent="@style/Theme.AppCompat.Light.Dialog">
        <!-- Changes the datepicker text color -->
        <item name="android:textColorPrimary">#FFF</item>
    </style>

    <style name="dialogRelLay">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">315dp</item>
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="dialogOkButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:text">@string/positive_button_message</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- activity_main_layout.xml -->
    <style name="backgroundImgView">
        <item name="android:src">@drawable/background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bottomBarImgView">
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="amountsListView">
        <item name="android:divider">@null</item>
    </style>

    <style name="drawerStyle">
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="amountBalance">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="bottomBarGraphicImgView">
        <item name="android:src">@drawable/graphic_neutral</item>
    </style>

    <!-- TODO: Test this on API < 21 -->
    <!-- activity_calendar_layout.xml -->
    <style name="datePickerStyle">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:calendarTextColor">@color/textDialogColor</item>
    </style>

    <!-- drawer_menu_item_layout.xml -->
    <style name="drawerMenuItemTextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- amount_list_view_item_layout.xml -->
    <style name="amountItemTextView">
        <item name="android:textSize">23sp</item>
    </style>

    <!--TODO: Delete this XML layout-->
    <!-- add_amount_popup_layout -->
    <style name="addAmountPopupEditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">6</item>
    </style>

    <!-- action_bar_text_layout.xml-->
    <style name="actionBarTextViewStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--amount_dialog_layout.xml-->
    <style name="amountDialogEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textDialogColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/textDialogColor</item>
    </style>

    <style name="amountDialogRadioBtnStyle">
        <item name="android:textColor">@color/textDialogColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="amountDialogTitlePromptStyle">
        <item name="android:textColor">@color/textDialogColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
