<resources>

    <!-- App custom theme and customActionBar theme. -->
    <style name="AppCustomTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
        <!-- For appCompat compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarTheme</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/action_bar_color</item>
        <item name="android:displayOptions">showHome|homeAsUp|showCustom</item>
        <!-- For appCompat compatibility -->
        <item name="background">@drawable/action_bar_color</item>
        <item name="displayOptions">showHome|homeAsUp|showCustom</item>
    </style>

    <!-- activity_main_layout.xml -->
    <style name="backgroundImgView">
        <item name="android:src">@drawable/background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bottomBarImgView">
        <item name="android:background">@drawable/action_bar_color</item>
    </style>

    <style name="amountsListView">
        <item name="android:divider">@null</item>
    </style>

    <style name="drawerStyle">
        <item name="android:background">@drawable/action_bar_color</item>
    </style>

    <!-- add_menu_item_layout.xml -->
    <style name="addMenuItemImageView">
        <item name="android:src">@drawable/plus</item>
    </style>

    <style name="addMenuItemTextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- expense_amount_list_view_item_layout.xml -->
    <style name="expenseAmountItemTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- add_expense_amount_popup_layout.xml -->
    <style name="addExpensePopupEditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">6</item>
    </style>

    <!-- action_bar_text_layout.xml-->
    <style name="actionBarTextView">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
